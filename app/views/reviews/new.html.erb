<div class="container">

  <h1>New review</h1>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, label: "Rating (0 to 5)" %>
    <%= f.submit "Add a review", class: "btn btn-dark" %>
  <% end %>
  <br>
  <%= link_to "Go back", restaurant_path(@restaurant.id)  %>

</div>
