<%= render 'navbar' %>


<div class="container w-50">
  <div class="info">
    <h1 class="mt-3"><%= @restaurant.name %> (<%= @restaurant.category %>)</h1>
    <h4><%= @restaurant.address %></h4>
    <p>Phone number: <% if @restaurant.phone_number.empty? %> N.a. <% else %> <%= @restaurant.phone_number %> <% end %></p>
  </div>

  <div class="reviews mt-5">
    <h3>Reviews</h3>
    <% if @restaurant.reviews.empty? %>
    <p>No reviews yet</p>
    <% end %>
    <% @restaurant.reviews.each do |review| %>
      <p class="mt-3 mb-0"><%= review.content %></p>
      <% review.rating.times do %>
        <i class="fas fa-star"></i>
      <% end %>
      <% (5 - review.rating).times do %>
        <i class="far fa-star"></i>
      <% end %>
    <% end %>
    <br>

    <h4 class="mt-5 pt-3 border-top">New review</h4>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, label: "Rating (0 to 5)" %>
    <%= f.submit "Add a review", class: "btn btn-dark" %>
  <% end %>
  </div>
</div>





