<%= render 'navbar' %>

<div class="container">

  <h1>New restaurant</h1>

  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :address %>
    <%= f.input :phone_number, label: "Phone_number (optional)" %>
    <%= f.submit "Add a restaurant", class: "btn btn-dark" %>
  <% end %>
  <br>
  <%= link_to "Go back", restaurants_path  %>

</div>
